<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pmd_state_machine.provider.tokens_provider.class">PMD\StateMachineBundle\Provider\TokensProvider</parameter>
    </parameters>

    <services>
        <service id="pmd_state_machine.provider.tokens_provider"
                 class="%pmd_state_machine.provider.tokens_provider.class%">
            <argument type="service"
                      id="pmd_state_machine.factory"/>
            <argument type="service"
                      id="request_stack"/>
        </service>
    </services>
</container>
