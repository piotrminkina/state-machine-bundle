<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pmd_state_machine.controller.state_controller.class">PMD\StateMachineBundle\Controller\StateController</parameter>
        <parameter key="pmd_state_machine.handler.state_handler.class">PMD\StateMachineBundle\Handler\StateHandler</parameter>
        <parameter key="pmd_state_machine.process_factory.definition_factory.class">PMD\StateMachineBundle\Process\Factory\DefinitionFactory</parameter>
        <parameter key="pmd_state_machine.process_builder.definition_builder.class">PMD\StateMachineBundle\Process\Builder\DefinitionBuilder</parameter>
        <parameter key="pmd_state_machine.process_registry.class">PMD\StateMachineBundle\ProcessRegistry</parameter>
        <parameter key="pmd_state_machine.factory.class">PMD\StateMachineBundle\Factory</parameter>
    </parameters>

    <services>
        <service id="pmd_state_machine.controller.state_controller"
                 class="%pmd_state_machine.controller.state_controller.class%">
            <argument type="service"
                      id="pmd_state_machine.handler.state_handler"/>
        </service>

        <service id="pmd_state_machine.handler.state_handler"
                 class="%pmd_state_machine.handler.state_handler.class%">
            <argument type="service"
                      id="pmd_state_machine.factory"/>
        </service>

        <service id="pmd_state_machine.process_factory.definition_factory"
                 class="%pmd_state_machine.process_factory.definition_factory.class%">
        </service>

        <service id="pmd_state_machine.process_builder.definition_builder"
                 class="%pmd_state_machine.process_builder.definition_builder.class%">
            <argument type="service"
                      id="pmd_state_machine.process_factory.definition_factory"/>
        </service>

        <service id="pmd_state_machine.process_registry"
                 class="%pmd_state_machine.process_registry.class%">
            <argument type="collection"/>
            <argument type="service" id="service_container"/>
        </service>

        <service id="pmd_state_machine.factory"
                 class="%pmd_state_machine.factory.class%">
            <argument type="service"
                      id="pmd_state_machine.process_registry"/>
        </service>
    </services>
</container>
